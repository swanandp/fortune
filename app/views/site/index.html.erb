<div class="jumbotron">
    <div class="row form-group">
        <div class="col-lg-12">
            <h1>
                <em>QotD. Subscribed.</em><br>
                <small>Get a random quote delivered to your mailbox daily!</small>
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <%= form_for SubscriptionRequest.new do |f| %>
              <div class="form-group">
                  <%= flash_messages %>
              </div>
              <div class="form-group">
                  <%= f.text_field :email, class: "form-control input-lg", type: "email", required: true, autocomplete: "off" %>
              </div>
              <div class="form-group">
                  <%= f.submit "Sign me up!", class: "btn btn-primary btn-lg" %>
              </div>
            <% end %>
        </div>
    </div>
</div>
